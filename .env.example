# Пример файла переменных окружения
# Скопируйте этот файл в .env и заполните реальными значениями

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Настройки модели
GPT_MODEL=gpt-4o-nano
TEMPERATURE=0.3
MAX_TOKENS=1024

# Системный промпт (опционально)
SYSTEM_PROMPT="Ты - умный ассистент компании Optima AI. Отвечай на запросы пользователя, основываясь на предоставленном контексте."

# Настройки приложения
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Безопасность
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001"]
API_KEY=your_optional_api_key_for_authentication
RATE_LIMIT_PER_MINUTE=100

# Кэширование
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# RAG настройки
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_K_DOCUMENTS=4
EMBEDDING_MODEL=text-embedding-3-small

# Пути
DATA_DIR=rag
PERSIST_DIR=rag_index